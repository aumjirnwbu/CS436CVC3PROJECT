@model CS436CVC3PROJECT.Models.EmailMessage

<h2 class="text-center mb-4">Delete Email</h2>

<div class="container">
    <!-- Email Details Section -->
    <div class="alert alert-warning">
        <p><strong>Subject:</strong> @Model.Subject</p>
        <p><strong>From:</strong> @Model.Sender</p>
        <p><strong>To:</strong> @Model.Recipient</p>
        <p><strong>Date Sent:</strong> @Model.SentDate</p>
        <p><strong>Body:</strong></p>
        <p>@Model.Body</p>
    </div>

    <!-- Confirmation Form -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Delete Confirmation Message -->
        <div class="alert alert-danger text-center mb-4">
            <strong>Are you sure you want to delete this email?</strong>
        </div>

        <!-- Delete and Cancel Buttons -->
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger btn-lg mx-2">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Inbox" class="btn btn-secondary btn-lg mx-2">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

<!-- Include Bootstrap Icons for the Delete and Cancel buttons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Styling for the form -->
<style>
    /* Center the container */
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Style for the email details section */
    .alert-warning {
        padding: 20px;
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        border-radius: 8px;
    }

    /* Style for the delete confirmation message */
    .alert-danger {
        font-size: 18px;
        font-weight: bold;
        padding: 15px;
    }

    /* Button Styling */
    .btn-lg {
        font-size: 16px;
        padding: 12px 30px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        font-weight: bold;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: bold;
    }

    /* Adding padding between the buttons */
    .mx-2 {
        margin-left: 10px;
        margin-right: 10px;
    }

    /* Button icon styling */
    .btn i {
        margin-right: 8px;
    }
</style>

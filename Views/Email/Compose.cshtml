@model CS436CVC3PROJECT.Models.EmailMessage

<h2 class="text-center mb-4">Compose New Email</h2>

<div class="container">
    <form asp-action="Send" method="post">
        <!-- Sender Field -->
        <div class="form-group mb-4">
            <label asp-for="Sender" class="font-weight-bold"></label>
            <input asp-for="Sender" class="form-control" value="@User.Identity.Name" readonly />
        </div>

        <!-- Recipient Field -->
        <div class="form-group mb-4">
            <label asp-for="Recipient" class="font-weight-bold"></label>
            <input asp-for="Recipient" class="form-control" placeholder="Recipient's email" />
            <span asp-validation-for="Recipient" class="text-danger"></span>
        </div>

        <!-- Subject Field -->
        <div class="form-group mb-4">
            <label asp-for="Subject" class="font-weight-bold"></label>
            <input asp-for="Subject" class="form-control" placeholder="Subject of the email" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <!-- Body Field -->
        <div class="form-group mb-4">
            <label asp-for="Body" class="font-weight-bold"></label>
            <textarea asp-for="Body" class="form-control" placeholder="Enter the content of your email"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <!-- Send and Back Buttons in the same line -->
        <div class="d-flex justify-content-between">
            <!-- Send Button -->
            <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-send"></i> Send Email
            </button>

            <!-- Back Button -->
            <a asp-action="Inbox" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back to Inbox
            </a>
        </div>
    </form>
</div>

<!-- Include Bootstrap Icons for the Send button icon -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Styling for the form -->
<style>
    /* Center the form and add padding */
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Add space between form groups */
    .form-group {
        margin-bottom: 1.5rem;
    }

    /* Styling for labels */
    label {
        font-weight: bold;
    }

    /* Focus effect for input fields and textareas */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    /* Button styling */
    .btn-lg {
        font-size: 18px;
        padding: 12px 30px;
    }

    .btn-success {
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        /* Button icon styling */
        .btn-success i, .btn-secondary i {
            margin-right: 8px;
        }

    /* Placeholder styling */
    ::placeholder {
        color: #6c757d;
        opacity: 1;
    }
</style>

@model CS436CVC3PROJECT.Models.EmailMessage

<h2 class="text-center mb-4">Edit Email</h2>

<div class="container">
    <!-- Display validation errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Edit" method="post">
        <!-- Sender Field -->
        <div class="form-group mb-4">
            <label asp-for="Sender" class="font-weight-bold">Sender</label>
            <input asp-for="Sender" class="form-control" readonly />
            <span asp-validation-for="Sender" class="text-danger"></span>
        </div>

        <!-- Subject Field -->
        <div class="form-group mb-4">
            <label asp-for="Subject" class="font-weight-bold">Subject</label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <!-- Recipient Field -->
        <div class="form-group mb-4">
            <label asp-for="Recipient" class="font-weight-bold">Recipient</label>
            <input asp-for="Recipient" class="form-control" />
            <span asp-validation-for="Recipient" class="text-danger"></span>
        </div>

        <!-- Body Field -->
        <div class="form-group mb-4">
            <label asp-for="Body" class="font-weight-bold">Body</label>
            <textarea asp-for="Body" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-save"></i> Save Changes
            </button>
            <a asp-action="Inbox" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

<!-- Include Bootstrap Icons for buttons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Styling for the form -->
<style>
    /* Center the container */
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Add space between form groups */
    .form-group {
        margin-bottom: 1.5rem;
    }

    /* Styling for labels */
    label {
        font-weight: bold;
    }

    /* Focus effect for input fields and textareas */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    /* Button styling */
    .btn-lg {
        font-size: 18px;
        padding: 12px 30px;
    }

    .btn-success {
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: bold;
    }

    /* Button icon styling */
    .btn i {
        margin-right: 8px;
    }

    /* Placeholder styling */
    ::placeholder {
        color: #6c757d;
        opacity: 1;
    }
</style>

@model CS436CVC3PROJECT.Models.Inventory

<h2 class="text-center mb-4">Create Inventory</h2>

<!-- Form Container with padding and margin for better presentation -->
<div class="container">
    <form asp-action="Create">
        <!-- Product Name Field -->
        <div class="form-group mb-3">
            <label asp-for="ProductName" class="font-weight-bold"></label>
            <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
        </div>

        <!-- Description Field -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="font-weight-bold"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
        </div>

        <!-- Price Field -->
        <div class="form-group mb-3">
            <label asp-for="Price" class="font-weight-bold"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
        </div>

        <!-- Stock Field -->
        <div class="form-group mb-3">
            <label asp-for="Stock" class="font-weight-bold"></label>
            <input asp-for="Stock" class="form-control" type="number" placeholder="Enter stock quantity" />
        </div>

        <!-- Sale Field -->
        <div class="form-group mb-3">
            <label asp-for="Sale" class="font-weight-bold"></label>
            <select asp-for="Sale" class="form-control">
                <option value="SaleD1">SaleD1</option>
                <option value="SaleD2">SaleD2</option>
                <option value="SaleD3">SaleD3</option>
                <option value="SaleD4">SaleD4</option>
            </select>
        </div>

        <!-- Save Button -->
        <div class="form-group mb-3 text-center">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-save"></i> Save
            </button>
        </div>

        <!-- Back Button -->
        <div class="form-group mb-3 text-center">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </form>
</div>

<!-- Include Bootstrap Icons for Save and Back button icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Styling for the form -->
<style>
    /* Hover Effect for Input Fields */
    .form-control:focus {
        border-color: #007bff; /* Blue border on focus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Blue glow effect */
    }

    /* Focus effect for the Save Button */
    .btn:hover {
        opacity: 0.9;
        transform: scale(1.05);
        transition: all 0.3s ease;
    }

    /* Hover effect for the Back Button */
    .btn-secondary:hover {
        opacity: 0.9;
        transform: scale(1.05);
        transition: all 0.3s ease;
    }

    /* Larger Buttons */
    .btn-lg {
        width: 200px;
        font-size: 1.1rem;
        padding: 10px;
    }

    /* Spacing between form elements */
    .mb-3 {
        margin-bottom: 20px;
    }

    /* Label styling */
    .control-label {
        font-weight: bold;
        font-size: 1.1rem;
    }

    /* Error message styling */
    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
    }
</style>

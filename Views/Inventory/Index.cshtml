@model IEnumerable<CS436CVC3PROJECT.Models.Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Inventory List</h2>

    <!-- Create New Button -->
    <div class="mb-3 text-right">
        <a class="btn btn-success" asp-action="Create">Create New Product</a>
    </div>

    <!-- Inventory Table -->
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Sale</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                    <td>@item.Sale</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Edit Product">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Delete Product">
                                <i class="bi bi-trash"></i> Delete
                            </a>                            
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include Bootstrap Icons (optional for adding icons) -->
@* You can use Bootstrap Icons for buttons like Edit, Delete, and Add Email *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Hover Effects -->
<style>
    /* Table Row Hover Effect */
    .table tr:hover {
        background-color: #f8f9fa;  /* Light background on hover */
        cursor: pointer;  /* Change cursor to indicate it's clickable */
    }

    /* Action Button Hover Effect */
    .btn-group .btn:hover {
        opacity: 0.8;  /* Slightly fade the button on hover */
        transform: scale(1.05);  /* Slightly scale up the button */
        transition: all 0.3s ease;  /* Smooth transition for the hover effect */
    }
</style>

@model CS436CVC3PROJECT.Models.Inventory

@{
    ViewData["Title"] = "Edit Inventory";
}

<h2 class="text-center mb-4 text-primary">Edit Inventory</h2>

<!-- Form Container with padding and margin for better presentation -->
<div class="container">
    <form asp-action="Edit" method="post">
        <!-- Hidden field for the Inventory Id -->
        <input type="hidden" asp-for="Id" />

        <!-- Product Name Field -->
        <div class="form-group mb-3">
            <label asp-for="ProductName" class="font-weight-bold"></label>
            <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <!-- Description Field -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="font-weight-bold"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Price Field -->
        <div class="form-group mb-3">
            <label asp-for="Price" class="font-weight-bold"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Stock Field -->
        <div class="form-group mb-3">
            <label asp-for="Stock" class="font-weight-bold"></label>
            <input asp-for="Stock" class="form-control" type="number" placeholder="Enter stock quantity" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <!-- Sale Field -->
        <div class="form-group mb-3">
            <label asp-for="Sale" class="font-weight-bold"></label>
            <select asp-for="Sale" class="form-control">
                <option value="SaleD1" selected="@Model.Sale == " SaleD1"">SaleD1</option>
                <option value="SaleD2" selected="@Model.Sale == " SaleD2"">SaleD2</option>
                <option value="SaleD3" selected="@Model.Sale == " SaleD3"">SaleD3</option>
                <option value="SaleD4" selected="@Model.Sale == " SaleD4"">SaleD4</option>
            </select>
            <span asp-validation-for="Sale" class="text-danger"></span>
        </div>

        <!-- Save Button -->
        <div class="form-group mb-3 text-center">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-save"></i> Save Changes
            </button>
        </div>

        <!-- Cancel Button -->
        <div class="form-group text-center">
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>

<!-- Include Bootstrap Icons for Save button icon -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Styling for the form -->
<style>
    /* Hover Effect for Input Fields */
    .form-control:focus {
        border-color: #007bff; /* Blue border on focus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Blue glow effect */
    }

    /* Focus effect for the Save Button */
    .btn:hover {
        opacity: 0.9;
        transform: scale(1.05);
        transition: all 0.3s ease;
    }

    /* Custom Styling for the Cancel Button */
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    /* Larger Buttons */
    .btn-lg {
        width: 200px;
        font-size: 1.1rem;
        padding: 10px;
    }

    /* Spacing between form elements */
    .mb-3 {
        margin-bottom: 20px;
    }

    /* Label styling */
    .control-label {
        font-weight: bold;
        font-size: 1.1rem;
    }

    /* Error message styling */
    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
    }
</style>

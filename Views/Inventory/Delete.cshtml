@model CS436CVC3PROJECT.Models.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<!-- Page Title -->
<h2 class="text-center mb-4 text-danger">Delete Inventory</h2>

<!-- Inventory Details Section -->
<div class="container">
    <h4 class="mb-3">Inventory Details</h4>
    <hr />
    <dl class="row mb-4">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd> <!-- Format as currency -->

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>

        <dt class="col-sm-2">Sale</dt>
        <dd class="col-sm-10">@Model.Sale</dd>
    </dl>
</div>

<!-- Confirmation Section -->
<div class="container text-center">
    <h4 class="text-warning mb-4">Are you sure you want to delete this inventory item?</h4>

    <!-- Delete Form -->
    <form asp-action="Delete" method="post">
        <!-- Hidden field to hold the Inventory Id -->
        <input type="hidden" asp-for="Id" />

        <!-- Delete Button -->
        <button type="submit" class="btn btn-danger btn-lg mb-2" style="width: 200px;">
            <i class="bi bi-trash"></i> Delete
        </button>

        <!-- Cancel Button -->
        <a asp-action="Index" class="btn btn-secondary btn-lg mb-2" style="width: 200px;">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>

<!-- Include Bootstrap Icons for Delete and Cancel button icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom Styling for the form -->
<style>
    /* Add some padding to the page */
    .container {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    /* Improve styling for the form fields */
    .dl-horizontal dt {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .dl-horizontal dd {
        font-size: 1.1rem;
        color: #555;
    }

    /* Styling the confirmation message */
    .text-warning {
        font-size: 1.2rem;
        font-weight: bold;
    }

    /* Button hover effects */
    .btn:hover {
        opacity: 0.9;
        transform: scale(1.05);
        transition: all 0.3s ease;
    }

    /* Adjust buttons to match width */
    .btn {
        width: 200px;
    }
</style>
